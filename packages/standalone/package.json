{
    "name": "@scoreman/standalone",
    "version": "0.0.1",
    "description": "Self-contained app for scoreman",
    "main": "index.js",
    "repository": "https://github.com/N0NamedGuy/scoreman",
    "author": "David Serrano <david.ma.serrano@gmail.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "distall": "electron-builder -lw"
    },
    "build": {
        "appId": "org.duckdns.dserrano.scoreman",
        "productName": "Scoreman",
        "copyright": "Copyright Â© 2020 David Serrano and contributors",
        "win": {
            "target": "portable"
        },
        "linux": {
            "target": "AppImage",
            "executableName": "scoreman",
            "category": "Utility"
        }
    },
    "devDependencies": {
        "electron": "8.3.0",
        "electron-builder": "^22.6.0"
    },
    "dependencies": {
        "@scoreman/client": "^0.0.1",
        "@scoreman/server": "^0.0.1",
        "@scoreman/overlays": "^0.0.1"
    }
}
