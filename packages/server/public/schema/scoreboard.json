{
    "$schema": "http://json-schema.org/schema#",
    "id": "http://hypestteam.com/scoreboard/schemas/scoreboard.json",
    "title": "HypestBoard scoreboard object",

    "type": "object",

    "definitions": {
        "icon": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "icon": { "type": "string" }
            },
            "required": ["name", "icon"],
            "additionalProperties": false
        },

        "entrant": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "score": {
                    "type": "number",
                    "minimum": 0
                },
                "players": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/player"
                    }
                }
            },
            "additionalProperties": false
        },

        "player": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "character": {
                    "$ref": "#/definitions/icon"
                },
                "sponsor": {
                    "type": "string"
                },
                "flag": {
                    "$ref": "#/definitions/icon"
                }
            },
            "additionalProperties": false
        },

        "commentator": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "handle": { "type": "string" }
            },
            "additionalProperties": false
        },
          
        "game": {
        	"type": "object",
            "properties": {
            	"id": { "type": "string" },
                "name": { "type": "string" }
            },
            "required": ["id"],
            "additionalProperties": true
        }
    },

    "properties": {
        "entrants": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/entrant"
            }
        },

        "commentators": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/commentator"
            }
        },

        "game": {
        	"$ref": "#/definitions/game"
        },

        "round": { "type": "string" },
        "tournamentName": { "type": "string" },
        "caster": { "type": "string" },
        "streamer": { "type": "string" }
    },

    "required": [
        "entrants",
        "commentators",
        "game"
    ],

    "additionalProperties": false
}
