{
    "$schema": "http://json-schema.org/schema#",
    "id": "http://dserrano.duckdns.org/scoreboard/config/schemas/scoreboard.json",
    "title": "Scoreman scoreboard object",

    "type": "object",

    "definitions": {
        "color": {
            "type": ["object", "null"],
            "properties": {
                "name": { "type": "string" },
                "id": { "type": "string" },
                "hex": { "type": "string" }
            },
            "required": ["name", "id", "hex"],
            "additionalProperties": false
        },

        "character": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "id": { "type": "string" },
                "color": {
                    "$ref": "#/definitions/color"
                }
            },
            "required": ["name", "id"],
            "additionalProperties": false
        },

        "country": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "code": { "type": "string" }
            },
            "required": ["name", "code"],
            "additionalProperties": false
        },

        "entrant": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "score": {
                    "type": "number",
                    "minimum": 0
                },
                "players": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/player"
                    }
                }
            },
            "additionalProperties": false
        },

        "player": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "character": {
                    "$ref": "#/definitions/character"
                },
                "sponsor": {
                    "type": "string"
                },
                "country": {
                    "$ref": "#/definitions/country"
                }
            },
            "additionalProperties": false
        },

        "commentator": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "handle": { "type": "string" }
            },
            "additionalProperties": false
        },
          
        "game": {
        	"type": "object",
            "properties": {
            	"id": { "type": "string" },
                "name": { "type": "string" }
            },
            "required": ["id"],
            "additionalProperties": true
        }
    },

    "properties": {
        "entrants": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/entrant"
            }
        },

        "commentators": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/commentator"
            }
        },

        "game": {
        	"$ref": "#/definitions/game"
        },

        "round": { "type": "string" },
        "tournamentName": { "type": "string" },
        "caster": { "type": "string" },
        "streamer": { "type": "string" },

        "twitch": { "type": "string" },
        "twitter": { "type": "string" },
        "facebook": { "type": "string" },
        "youtube": { "type": "string" },
        "reddit": { "type": "string" }
    },

    "required": [
        "entrants",
        "commentators",
        "game"
    ],

    "additionalProperties": false
}
